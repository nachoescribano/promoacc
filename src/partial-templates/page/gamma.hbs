<a id="gama"></a>
    <section class="section section-neutral">
      <div class="container section-neutral__container">
        <div class="row">
          <div class="col-12">
            <h3 class="h3 text-center">
              {{gamma-section.subtitle}}
            </h3>
            <h2 class="h2 text-center mb-5">
              {{gamma-section.title}}
            </h3>
          </div>
        </div>
        {{#each gamma-section.cards}}
          <div class="row section-neutral__row">
          <div class="{{#if (ifEven @index)}}col-12 col-md-4 col-lg-3 offset-lg-2{{else}}col-12 col-md-4 col-lg-3 order-md-2{{/if}}">
            <div class="card-cb">
              <img src="{{this.image}}" class="card-cb__img" alt="{{this.image-alt}}">
              <a href="{{this.href}}" class="card-cb__button" target="_blank">{{../gamma-section.view-gamma}}</a>
            </div>
            </div>
            <div class="{{#if (ifEven @index)}}col-12 col-md-8 col-lg-5{{else}}col-12 col-md-8 col-lg-5 order-md-1 offset-lg-2{{/if}}">
              <h3 class="h3 section-neutral__title">{{this.title}}</h3>
              <p class="p section-neutral__body">{{{this.description-1}}}</p>
              <p class="p section-neutral__body">{{this.description-2}}</p>
            </div>
          </div>
        {{/each}}
        <div class="row">
          <div class="col-12 col-md-10 col-xl-7 m-auto">
            <div class="section-neutral-notice section-neutral-notice--warning">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#E4002B" class="bi bi-info-circle-fill section-neutral-notice__icon" viewBox="0 0 16 16">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
              </svg>
              <p class="section-neutral-notice__body">
                {{{gamma-section.advertisement}}}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>